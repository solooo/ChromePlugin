{
    "manifest_version": 2,
    "name": "消息测试",
    "version": "1.0",
    "description": "消息测试",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "images/icon16.png"
        },
		"default_popup":"html/popup.html"
    },
	
    "background": {
        "scripts": [
            "js/status.js"
        ]
    },
    "permissions": [
        "*://www.google.com/ncr"
    ]
}