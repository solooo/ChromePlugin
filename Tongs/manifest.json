{
    "manifest_version": 2,
    "name": "Google在线状态",
    "version": "1.0",
    "description": "监视Google是否在线",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "images/icon16.png"
        }
    },
    "background": {
        "scripts": [
            "scripts/status.js"
        ]
    },
    "permissions": [
        "*://www.google.com/ncr"
    ]
}